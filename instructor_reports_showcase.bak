<script>
    document.addEventListener('DOMContentLoaded', function() {
      // Theme toggle
      const themeToggle = document.getElementById('theme-toggle');
      const themeIcon = themeToggle.querySelector('i');
      const htmlElement = document.documentElement;
      themeToggle.addEventListener('click', function() {
        if (htmlElement.classList.contains('light-mode')) {
          htmlElement.classList.remove('light-mode');
          themeIcon.classList.remove('fa-sun');
          themeIcon.classList.add('fa-moon');
        } else {
          htmlElement.classList.add('light-mode');
          themeIcon.classList.remove('fa-moon');
          themeIcon.classList.add('fa-sun');
        }
      });
      // Category filter
      const categoryPills = document.querySelectorAll('.category-pill');
      const reportCards = document.querySelectorAll('.report-card');
      categoryPills.forEach(pill => {
        pill.addEventListener('click', function() {
          categoryPills.forEach(p => p.classList.remove('active'));
          this.classList.add('active');
          const selectedCategory = this.getAttribute('data-category');
          reportCards.forEach(card => {
            if (selectedCategory === 'all') {
              card.style.display = 'flex';
            } else {
              const cardCategories = card.getAttribute('data-categories');
              if (cardCategories && cardCategories.includes(selectedCategory)) {
                card.style.display = 'flex';
              } else {
                card.style.display = 'none';
              }
            }
          });
          document.querySelector('.report-cards').style.opacity = '0';
          setTimeout(() => {
            document.querySelector('.report-cards').style.opacity = '1';
          }, 50);
        });
      });
      // Truncate report descriptions to 75 words
      document.querySelectorAll('.report-description').forEach(function(desc) {
        const words = desc.textContent.trim().split(/\s+/);
        if (words.length > 75) {
          desc.textContent = words.slice(0, 75).join(' ') + '...';
        }
      });
    });
  </script>
